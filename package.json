{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Ejercicio Módulo 2 #YoProgramo",
  "main": "index.js",
  "scripts": {
    "css": "sass ./src/scss/main.scss ./dist/css/main.css",
    "watch:css": "onchange ./src/scss/*.scss -- npm run css",
    "serve": "browser-sync start --server ./dist/ --files ./dist/",
    "dev": "parallelshell 'npm run watch:css' 'npm run serve'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blanche-a/portfolio-FrontEnd.git"
  },
  "keywords": [
    "html",
    "css",
    "javascript",
    "bootstrap",
    "typescript"
  ],
  "author": "Adrián Blanche",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/blanche-a/portfolio-FrontEnd/issues"
  },
  "homepage": "https://github.com/blanche-a/portfolio-FrontEnd#readme",
  "devDependencies": {
    "bootstrap": "^5.2.0",
    "browser-sync": "^2.27.10",
    "html5-boilerplate": "^8.0.0",
    "onchange": "^7.1.0",
    "parallelshell": "^3.0.1",
    "sass": "^1.54.0"
  },
  "dependencies": {
    "typescript": "^4.8.2"
  }
}
